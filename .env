# Zendesk (нужно только для экспорта тикетов)
ZENDESK_SUBDOMAIN=prisma-ai
ZENDESK_EMAIL=v.kulagin@prisma-ai.com
ZENDESK_API_TOKEN=afzxJUboBkM7FrVs1S0J4oGXojSULTBEJrprIcZg

# LM Studio (проверь адрес в UI LM Studio → Reachable at)
LMSTUDIO_BASE=http://192.168.0.24:1234/v1
MODEL=openai/gpt-oss-20b

# Модели для эмбеддингов и реранка
EMB_MODEL_NAME=intfloat/multilingual-e5-small
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Qdrant (локально через docker run -p 6333:6333 qdrant/qdrant)
QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=  # оставь пустым для локального Qdrant
QDRANT_COLLECTION=zendesk_6m

# Путь к данным
INPUT_PATH=./tickets.jsonl
SOPS_SEED_FILE=./sops_seed.json

# Ретрив и оценка
TOP_K=12
CONF_THRESHOLD=0.55
SCORE_MIN=0.20
SIM_MIN=0.40
DECAY_LAM=0.02
MAX_CONTEXT_TOKENS=3000
MAX_OUTPUT_TOKENS=256
SNIPPET_CHARS_PER_CHUNK=700

# Фичи
ENABLE_RULE_TEMPLATES=1
STRICT_RAG=1
MIN_CONF_ANSWER=0.58

# Ограничение по «свежести» (опционально, влияет на фильтр по времени)
DATE_FROM=2025-05-01
